                <Button x:Name="button1" Content="宿舍列表 " Margin="0,160,12,435" FontSize="20" Background="Gray" FontWeight="Bold" FontFamily="Segoe UI Semibold" Foreground="RoyalBlue" BorderThickness="0" Padding="0" HorizontalContentAlignment="Right"  Width="148" Click="Button_Click" HorizontalAlignment="Right" Cursor="Hand">
                    <Button.Template>
                        <ControlTemplate TargetType="{x:Type Button}">
                            <Border BorderThickness="3" BorderBrush="#FF8C8C9D" CornerRadius="10" Background="{TemplateBinding Background}" HorizontalAlignment="Right" Margin="-10,-5,-5,-6" Width="155">
                                <ContentPresenter HorizontalAlignment="Right"/>
